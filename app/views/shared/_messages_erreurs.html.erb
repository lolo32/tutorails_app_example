<% if object.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize( object.errors.count, 'erreur') %>
        ont empêché d'enregistrer cet <%= object.class.to_s.underscore.humanize.downcase %>.</h2>
    <p>Merci de corriger les champs ci-dessous&nbsp;:</p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
