<% if @utilisateur.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize( @utilisateur.errors.count, 'erreur') %>
        ont empêché d'enregistrer votre inscription</h2>
    <p>Merci de corriger ces champs&nbsp;:</p>
    <ul>
    <% @utilisateur.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
