<h1>Inscription</h1>

<%= form_for( @utilisateur ) do |f| %>
  <%= render 'shared/messages_erreurs', :object => f.object %>
  <div class="field">
    <%= f.label :nom %><br/>
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :courriel %><br/>
    <%= f.text_field :courriel %>
  </div>
  <div class="field">
    <%= f.label :mdp, 'Mot de passe' %><br/>
    <%= f.password_field :mdp %>
  </div>
  <div class="field">
    <%= f.label :mdp_confirmation, 'Confirmation' %><br/>
    <%= f.password_field :mdp_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit 'Inscription' %>
  </div>
<% end %>
