<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to 'Accueil',        root_path %></li>
      <% if signed_in? %>
      <li><%= link_to 'Utilisateurs',   utilisateurs_path %></li>
      <li><%= link_to 'Profil',         current_utilisateur %></li>
      <li><%= link_to 'Paramètres',     edit_utilisateur_path(current_utilisateur) %></li>
      <% end %>
      <li><%= link_to 'Aide',           help_path %></li>
      <% if signed_in? %>
      <li><%= link_to 'Déconnexion',    signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "S'identifier",   signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
